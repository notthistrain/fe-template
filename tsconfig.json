{
  "extends": "./.config/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "./", // 解析非相对模块的基础路径
    "paths": { // 路径别名映射
      "~/*": ["src/*"],
      "@/*": ["wailsjs/*"]
    },
    "types": ["vite/client", "unplugin-icons/types/vue"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "types/**/*.d.ts",
    "vite.config.ts"
  ],

  /* 排除的文件 */
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "public"]
}
